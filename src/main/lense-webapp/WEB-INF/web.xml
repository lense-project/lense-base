<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <listener>
        <listener-class>org.scalatra.servlet.ScalatraListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>WorkServlet</servlet-name>
        <servlet-class>edu.stanford.lense_base.server.WorkUnitServlet</servlet-class>
        <init-param>
            <param-name>org.atmosphere.cpr.scanClassPath</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>org.scalatra.environment</param-name>
            <param-value>development</param-value>
        </init-param>
        <init-param>
            <param-name>org.atmosphere.servlet</param-name>
            <param-value>com.proinnovate.webfunction.AtmosphereServlet</param-value>
        </init-param>
        <init-param>
            <param-name>org.atmosphere.cpr.broadcasterCacheClass</param-name>
            <param-value>org.atmosphere.cache.UUIDBroadcasterCache</param-value>
        </init-param>

        <async-supported>true</async-supported>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>WorkServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
